<!DOCTYPE html>
<html>
  <head>
    <title>アンケート</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button type="button" class="navbar-toggler">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">アンケート</a>
    </nav>
    <br>
    <% if notice.present? %>
      <div class="col-md-8 mx-auto">
        <div class="alert alert-success">
          <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;<%= notice %>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="col-md-12 mx-auto">
        <%= yield %>
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Questionnaire system.</p>
      </div>
    </footer>
  </body>
</html>

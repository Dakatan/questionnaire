<%= form_with(model: question, local: true, url: url) do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">タイトル</label>
    <div class="col-sm-10">
      <% if question.errors[:title].blank? %>
        <%= f.text_field :title, class: 'form-control' %>
      <% else %>
        <%= f.text_field :title, class: 'form-control is-invalid' %>
        <span class="text-danger">
          <%= question.errors[:title].first %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">質問タイプ</label>
    <div class="col-sm-10">
      <% if question.errors[:question_type].blank? %>
        <%= f.text_field :question_type, class: 'form-control' %>
      <% else %>
        <%= f.text_field :question_type, class: 'form-control is-invalid' %>
        <span class="text-danger">
          <%= question.errors[:question_type].first %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">テキスト</label>
    <div class="col-sm-10">
      <% if question.errors[:text].blank? %>
        <%= f.text_area :text, class: 'form-control' %>
      <% else %>
        <%= f.text_area :text, class: 'form-control is-invalid' %>
        <span class="text-danger">
          <%= question.errors[:text].first %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="actions form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit '登録する', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<%= link_to 'アンケート詳細へ戻る', questionnaire_path(@questionnaire), class: 'btn btn-success btn-sm' %>

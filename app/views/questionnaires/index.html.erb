<p id="notice"><%= notice %></p>

<h1>アンケート</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr>
        <td>タイトル: <%= questionnaire.title %></td>
        <td><%= link_to '詳細', questionnaire %></td>
        <td><%= link_to '削除', questionnaire, method: :delete, data: { confirm: '削除します、よろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

